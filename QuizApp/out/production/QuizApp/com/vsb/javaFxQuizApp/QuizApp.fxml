<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.vsb.javaFxQuizApp.QuizController">
    <VBox spacing="10" alignment="CENTER">
        <Label fx:id="questionLabel" text="Question goes here"/>
        <HBox spacing="10">
            <Button text="Option 1" onMouseClicked="#submitAnswer"/>
            <Button text="Option 2" onMouseClicked="#submitAnswer"/>
            <Button text="Option 3" onMouseClicked="#submitAnswer"/>
            <Button text="Option 4" onMouseClicked="#submitAnswer"/>
        </HBox>
        <Label fx:id="timerLabel" text="Timer: 10"/>
    </VBox>
</StackPane>